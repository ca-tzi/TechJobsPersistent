@model List<TechJobsPersistent.Models.Employer>

@if (Model.Count == 0)
{
    <h1>No employers!</h1>
}
else
{
    
    
        @foreach (Employer employer in Model)
        {
            <a asp-controller = "Employer" asp-action = "About" asp-route-id = "@employer.Id">@employer.Name</a>
        }
    

}