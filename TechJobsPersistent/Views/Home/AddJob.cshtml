@model TechJobsPersistent.ViewModels.AddJobViewModel

<h1>Add a Job</h1>


<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" />
        <span></span>
    </div>
    <div class="form-control">
        <label>Employer Information</label>
        <div>
            <select asp-for="EmployerId" asp-items="Model.Employers" />
        </div>
        <span></span>

    </div>




    <input type="submit" value="Add Job" />
</form>
<div>
    <button asp-controller="Employer" asp-action="Add" method="get">Add Employer</button>
</div>
